[commit]
	gpgsign = false
	template = ~/.config/git/message
[core]
	editor = emacs
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[merge]
	conflictstyle = diff3
	tool = meld
[mergetool "meld"]
	cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
[status]
	showuntrackedfiles = all
[transfer]
	fsckobjects = true
